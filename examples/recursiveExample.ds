prd rec addS := comatch { 'Ap(x,y)[k] =>
                       x
                       >>
                       match { 'Z    => y >> k
                             , 'S(z) => addS >> 'Ap(z,'S(y))[k]
                             }
                   };

prd rec addA := cocase { 'Ap(x,y)[*] => case x of { 'Z => y
                                               , 'S(z) => addA.'Ap(z, 'S(y))[*]
					      }
		     };
