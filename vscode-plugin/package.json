{
	"name": "duolang-client",
	"displayName": "duolang-client",
	"description": "LSP Client for the Duo Language",
	"version": "0.0.1",
	"publisher": "duolang",
	"repository": {
		"type": "git",
		"url": "https://github.com/ps-tuebingen/duolang"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:duolang"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "duolang",
				"extensions": [
					".duo"
				],
				"aliases": [
					"Duo",
					"duolang"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "duolang",
				"scopeName": "source.duolang",
				"path": "./syntaxes/duolang.tmGrammar.json"
			}
		],
		"snippets": [
			{
				"language": "duolang",
				"path": "./snippets/snippets.json"
			}
		],

		"configuration": {
			"type": "object",
			"title": "Duo",
			"properties": {
				"duolang-client.executable": {
					"type": "string",
					"default": "duo",
					"description": "Path to the Duo LSP executable"
				},
				"duolang-client.logfile": {
					"type": "string",
					"default": "",
					"description": "Specify the file that the LSP server will use for printing logs. If a logfile is not specified, output is directed to stderr."

				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3"
	}
}
