{
	"name": "dualsub-client",
	"displayName": "dualsub-client",
	"description": "LSP Client for the DualSub Language",
	"version": "0.0.1",
	"publisher": "dualsub",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:dualsub"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "dualsub",
				"extensions": [
					".ds"
				],
				"aliases": [
					"DualSub",
					"dualsub"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "dualsub",
				"scopeName": "source.dualsub",
				"path": "./syntaxes/dualsub.tmGrammar.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "DualSub",
			"properties": {
				"dualsub-client.executable": {
					"type": "string",
					"default": "dualsub",
					"description": "Path to the DualSub LSP executable"
				},
				"dualsub-client.logfile": {
					"type": ["string", null],
					"default": null,
					"description": "fii"

				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3"
	}
}
